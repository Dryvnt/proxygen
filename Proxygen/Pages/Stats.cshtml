@page
@using System.Globalization
@model Stats

@{
    ViewData["Title"] = "Proxygen";
}

<div id="surround">
    <div id="content">
        <h1>Request Stats</h1>
        <table style="margin-left: auto; margin-right: auto; min-width: 70%">
            <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Successful</th>
                <th>Failed</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align: left">Last 7 days</td>
                    <td style="min-width: 2em"></td>
                    <td>@Model.LastSevenDays.Count(r => r.UnrecognizedCards.Count == 0)</td>
                    <td>@Model.LastSevenDays.Count(r => r.UnrecognizedCards.Count > 0)</td>
                </tr>
                <tr>
                    <td style="text-align: left">Last 24 hours</td>
                    <td style="min-width: 2em"></td>
                    <td>@Model.LastTwentyFourHours.Count(r => r.UnrecognizedCards.Count == 0)</td>
                    <td>@Model.LastTwentyFourHours.Count(r => r.UnrecognizedCards.Count > 0)</td>
                </tr>
            </tbody>
        </table>
        <h1>Update History</h1>
        <table style="margin-left: auto; margin-right: auto; min-width: 70%">
            <tr>
                <th>Time</th>
                <th></th>
                <th>Status</th>
            </tr>
            @foreach (var update in Model.LastSevenUpdates)
            {
                <tr>
                    <td style="font-family: monospace">@update.Created.ToString("g", CultureInfo.InvariantCulture)</td>
                    <td style="width: 10%"></td>
                    <td style="font-family: monospace">@update.StatusState</td>
                </tr>
            }
        </table>
    </div>
</div>
